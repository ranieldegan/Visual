<%- include('partials/header'); %>

<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h1>Visual</h1>  
      <% if (locals.errors && locals.errors.profile) { %>
        <% locals.errors.profile.forEach(function(error) { %>
          <p class="alert alert-primary" role="alert"><%= error %></p>
        <% }) %>
      <% } %>
      <form action="/account" method="post" enctype="multipart/form-data"> 
        <div class="form-group">
          <label for="exampleInputEmail1">Email address</label>
          <input name="email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email" value="<%= locals.user.email %>">
          <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
        </div>
        <div class="form-group">
          <label for="exampleInputPassword1">Password</label>
          <input name="displayName" type="text" class="form-control" id="exampleInputPassword1" placeholder="Password" value="<%= locals.user.displayName %>">
        </div>
        <% if (locals.user.photoURL) { %>
            <div class="avatar">
                <p><img src="<%= locals.user.photoURL %>" alt=""></p>
            </div>
        <% } %>
        <div class="custom-file">
            <input type="file" name="avatar" class="custom-file-input" id="customFile">
            <label class="custom-file-label" for="customFile">Choose file</label>
          </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>
  <%- include('partials/footer'); %>